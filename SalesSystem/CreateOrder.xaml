<Window x:Class="SalesSystem.CreateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SalesSystem"
        mc:Ignorable="d"
        Title="CreateOrder" Height="450" Width="800"
        >
    <Window.Resources>
        <XmlDataProvider x:Key="ProductData" Source="XMLFile1.xml" XPath="/productListing/productType/product"/>
    </Window.Resources>
    <Grid>
        <Grid.Resources>
            
        </Grid.Resources>
        <ListView ItemsSource="{Binding Source={StaticResource ProductData}}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Item Number" DisplayMemberBinding="{Binding XPath=itemNumber}"/>
                    <GridViewColumn Header="Product" DisplayMemberBinding="{Binding XPath=name}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
